<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <%= render 'error' %>
  <% end %>

  <%= f.label :name, "Name" %>
  <%= f.text_field :name, placeholder: "Name" %> <br>
  <%= f.label :email, "Email" %>
  <%= f.text_field :email, autofocus: true, placeholder: "Email" %> <br>
  <%= f.label :password, "Password" %>
  <%= f.password_field :password, placeholder: "Password" %> <br>
  <%= f.label :password_confirmation, "Confirm Password" %>
   <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %> <br>

  <%= f.submit "Sign Up", :disable_with => 'Submiting...' %>
<% end %>
